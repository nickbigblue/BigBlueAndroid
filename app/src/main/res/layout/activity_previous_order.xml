<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bigblueocean.nick.bigblueocean.activities.PreviousOrderActivity">

    <TextView
        android:id="@+id/previous_order_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="@string/previous_orders"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="34sp"
        android:fontFamily="@font/impact"
        android:padding="8dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/previous_order_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/previous_order_cell">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
