<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/tuna"/>

    <LinearLayout
        android:id="@+id/dialog_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_info_label1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="@string/region"
                android:textSize="16sp"
                android:textAlignment="center"/>

            <in.goodiebag.carouselpicker.CarouselPicker
                android:id="@+id/dialog_carousel1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_margin="4dp"
                app:items_visible="three" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_info_label2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="@string/species"
                android:textSize="16sp"
                android:textAlignment="center"/>

            <in.goodiebag.carouselpicker.CarouselPicker
                android:id="@+id/dialog_carousel2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_margin="4dp"
                app:items_visible="three" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_info_label3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="@string/grade"
                android:textSize="16sp"
                android:textAlignment="center"/>

            <in.goodiebag.carouselpicker.CarouselPicker
                android:id="@+id/dialog_carousel3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_margin="4dp"
                app:items_visible="three" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_info_label4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="@string/size"
                android:textSize="16sp"
                android:textAlignment="center"/>

            <in.goodiebag.carouselpicker.CarouselPicker
                android:id="@+id/dialog_carousel4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_margin="4dp"
                app:items_visible="three" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_info_label5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:text="Total lbs."
                    android:textSize="16sp"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/dialog_edit_text1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black_overlay"
                    android:maxLines="1"
                    android:maxLength="5"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:hint="@string/default_quantity"
                    android:textSize="28sp"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dialog_info_label6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:text="Price per lb."
                        android:textSize="16sp"
                        android:textAlignment="center"/>

                    <EditText
                        android:id="@+id/dialog_edit_text2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="3"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/black_overlay"
                        android:maxLines="1"
                        android:maxLength="5"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionDone"
                        android:hint="@string/default_price"
                        android:textSize="28sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <Button
            android:id="@+id/dialog_cancel_button"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/dialog_cancel_button"
            android:textAlignment="center"
            android:textColor="@color/tuna"
            android:background="@color/white"/>

        <Button
            android:id="@+id/dialog_add_button"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/dialog_add_button"
            android:textAlignment="center"
            android:textColor="@color/tuna"
            android:background="@color/white"/>


    </LinearLayout>

</LinearLayout>
